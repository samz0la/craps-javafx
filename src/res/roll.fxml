<?import javafx.scene.text.Text?>

<HBox xmlns="http://javafx.com/javafx"
xmlns:fx="http://javafx.com/fxml"
style="roll">
   <stylesheets>
     <URL value="@styles.css"/>
   </stylesheets>

  <ImageView
    fx:id="die0"
    fitWidth="45"
    fitHeight="45"/>

  <ImageView
    fx:id="die1"
    fitWidth="45"
    fitHeight="45"/>

  <Text
    fx:id="total"
    text="%total_format"/>

</HBox>
